<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/rice"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingStart="@dimen/_5sdp">

        <TextView
            style="@style/StyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ashirwad"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_product_details_tvRate"
            style="@style/StyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Basmati Rice"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/activity_product_details_tvQuantity"
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="Quantity: "
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:id="@+id/activity_product_details_tvCount"
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_14ssp" />


        </LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="MRP: "
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_12ssp" />


            <TextView
                style="@style/StyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rs 12/kg"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


        <TextView
            style="@style/StyleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:background="@drawable/design_delete_back"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_1sdp"
            android:text="Remove"
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/colorAlizarin"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">


        <ImageButton
            android:id="@+id/activity_product_details_ibAdd"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24ssp"
            android:background="@drawable/ic_add"/>

        <TextView
            android:id="@+id/activity_product_details_tvCount"
            style="@style/StyleTextView"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:text="1"
            android:textColor="@color/colorPrimaryText"/>

        <ImageButton
            android:id="@+id/activity_product_details_ibMinus"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/ic_minus"/>
    </LinearLayout>
</LinearLayout>

